@{
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}
<head>
    <link rel="stylesheet" href="~/css/LoginStyle.css" />
</head>
<div class="login-container">
    <form id="login-form" asp-controller="User" asp-action="Index" method="post">
        <label class="login-label" for="username">Username</label>
        <input class="login-input" type="text" id="username" name="Username" required placeholder="Username" title="Please enter your username">
        <label class="login-label" for="pass">Password</label>
        <input class="login-input" type="password" id="pass" name="Password" required placeholder="Password">
        <div>
            <label class="show-pass" for="show-pass">Show password?</label>
            <input id="check-box" class="show-pass" name="show-pass" type="checkbox" />
        </div>
        <input id="login-button" class="login-view-button" type="submit" value="Login">
    </form>
</div>

<script>
    const passInput = document.getElementById("pass");
    const checkBox = document.getElementById("check-box");
    checkBox.onclick = function () { return TogglePassView(); };

    function TogglePassView() {
        if (checkBox.checked) {
            passInput.type = "text";
        }
        else { passInput.type = "password"; }
    }
</script>
